<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Brand Name"
        android:id="@+id/brandName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="@color/green"
        android:text="Weight"
        android:id="@+id/weight"
        android:layout_below="@+id/brandName"
        android:layout_alignStart="@+id/brandName"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max"
        android:id="@+id/maxWeight"
        android:layout_alignTop="@+id/weight"
        android:layout_marginStart="150dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min"
        android:id="@+id/minWeight"
        android:layout_below="@+id/maxWeight"
        android:layout_alignStart="@+id/maxWeight"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="@color/green"
        android:text="Radius"
        android:id="@+id/radius"
        android:layout_alignTop="@+id/weight"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max"
        android:id="@+id/maxRadius"
        android:layout_alignTop="@+id/radius"
        android:layout_toEndOf="@+id/radius"
        android:layout_marginStart="10dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min"
        android:id="@+id/minRadius"
        android:layout_below="@+id/maxRadius"
        android:layout_alignStart="@+id/maxRadius"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="@color/green"
        android:text="Resist"
        android:id="@+id/resist"
        android:layout_alignTop="@+id/maxRadius"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max"
        android:id="@+id/maxResist"
        android:layout_alignTop="@+id/resist"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min"
        android:id="@+id/minResist"
        android:layout_below="@+id/maxResist"
        android:layout_alignStart="@+id/maxResist"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Last Update:00-00-00"
        android:id="@+id/time"
        android:layout_alignTop="@+id/brandName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"/>

</RelativeLayout>