<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/table1"
        android:stretchColumns="*"
        android:background="@color/gray">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row1"
            android:layout_margin="10dp"
            android:background="@color/gray"
            android:layout_weight="1"
            android:stretchColumns="*">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:layout_weight="1"
                android:id="@+id/layout1">
                <TextView
                    android:text="@string/hello_world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="配方名稱:"
                    android:id="@+id/tv1"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="配方編號:"
                    android:id="@+id/tv3"
                    android:layout_below="@+id/tv1"
                    android:layout_alignStart="@+id/tv1"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="物料名稱:"
                    android:id="@+id/tv5"
                    android:layout_below="@+id/tv3"
                    android:layout_alignStart="@+id/tv3"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="物料編號:"
                    android:id="@+id/tv7"
                    android:layout_below="@+id/tv5"
                    android:layout_alignStart="@+id/tv5"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Pass or Fail:"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/tv7"
                    android:layout_alignStart="@+id/tv7"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="----"
                    android:id="@+id/tv2"
                    android:layout_alignTop="@+id/tv1"
                    android:layout_toEndOf="@+id/tv1"
                    android:layout_marginStart="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="----"
                    android:id="@+id/tv4"
                    android:layout_alignBottom="@+id/tv3"
                    android:layout_alignStart="@+id/tv2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="----"
                    android:id="@+id/tv6"
                    android:layout_alignTop="@+id/tv5"
                    android:layout_alignStart="@+id/tv4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="----"
                    android:id="@+id/tv10"
                    android:layout_alignBottom="@+id/tv7"
                    android:layout_alignStart="@+id/tv6" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_alignStart="@+id/tv6" />

                <Button
                    android:focusable="false"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/str_turn_off"
                    android:id="@+id/btn_turn_off"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:background="#4caf50"
                    android:layout_below="@+id/textView3"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_marginTop="30dp"/>.

                <Button
                    android:focusable="false"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/str_turn_on"
                    android:id="@+id/btn_turn_on"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:background="#e57373"
                    android:layout_below="@+id/btn_turn_off"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@color/background"
                android:layout_weight="1"
                android:id="@+id/layout2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="阻斷器:"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="36dp"
                    android:id="@+id/textView2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Not connected"
                    android:id="@+id/connected"
                    android:textColor="#d50000"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_toEndOf="@+id/textView2"
                    android:layout_marginStart="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="連線狀態:"
                    android:id="@+id/textView4"
                    android:layout_below="@id/textView2"
                    android:layout_alignStart="@id/textView2"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Not connected"
                    android:id="@+id/tv11"
                    android:layout_alignTop="@+id/textView4"
                    android:layout_alignStart="@+id/connected"
                    android:textColor="#d50000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="現正進料:"
                    android:id="@+id/tv8"
                    android:layout_below="@id/textView4"
                    android:layout_alignStart="@id/textView4"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0-00000000"
                    android:id="@+id/tv9"
                    android:layout_alignTop="@+id/tv8"
                    android:layout_alignStart="@+id/tv11"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scannerIn"
                    android:focusable="true"
                    android:windowSoftInputMode="stateHidden"
                    android:focusableInTouchMode="true"
                    android:layout_alignStart="@+id/tv11"
                    android:layout_below="@+id/tv9"
                    android:layout_alignEnd="@+id/tv11"
                    android:layout_marginTop="3dp"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="數    量:"
                    android:id="@+id/countText"
                    android:layout_below="@+id/scannerIn"
                    android:layout_alignStart="@+id/tv8"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:id="@+id/count"
                    android:layout_alignTop="@+id/countText"
                    android:layout_alignStart="@+id/scannerIn" />

                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textClock"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="36sp"
                    android:format24Hour="'現在時間 'MMM dd, aah:mm:ss"
                    android:layout_marginBottom="36dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="目前無換牌指令"
                    android:id="@+id/swapTitle"
                    android:textColor="@color/dark_gray"
                    android:layout_below="@id/countText"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp" />
                <SeekBar
                    android:id="@+id/myseek"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:max="100"
                    android:progress="3"
                    android:progressDrawable="@color/gray"
                    android:thumb="@drawable/slider"
                    android:layout_below="@+id/swapTitle"
                    android:layout_alignStart="@+id/swapTitle"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="60dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="員工ID: "
                    android:id="@+id/textView6"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_toEndOf="@+id/textView5"
                    android:layout_marginStart="80dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="--------"
                    android:id="@+id/workerID"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_toEndOf="@+id/textView6" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="1"
                    android:id="@+id/int1"
                    android:layout_below="@+id/textView6"
                    android:layout_alignStart="@+id/textView6"
                    android:textSize="20dp" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="2"
                    android:id="@+id/int2"
                    android:layout_alignTop="@+id/int1"
                    android:layout_toEndOf="@+id/int1"
                    android:textSize="20dp" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="3"
                    android:id="@+id/int3"
                    android:layout_alignTop="@+id/int2"
                    android:layout_toEndOf="@+id/int2"
                    android:textSize="20dp" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="4"
                    android:id="@+id/int4"
                    android:layout_alignTop="@+id/int3"
                    android:layout_toEndOf="@+id/int3"
                    android:textSize="20dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="6"
                    android:id="@+id/int6"
                    android:layout_below="@+id/int1"
                    android:layout_alignStart="@+id/int1"
                    android:textSize="20dp" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="7"
                    android:id="@+id/int7"
                    android:layout_alignTop="@+id/int6"
                    android:layout_toEndOf="@+id/int6"
                    android:textSize="20dp" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="8"
                    android:id="@+id/int8"
                    android:layout_alignTop="@+id/int7"
                    android:layout_toEndOf="@+id/int7"
                    android:textSize="20dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="9"
                    android:id="@+id/int9"
                    android:layout_alignTop="@+id/int8"
                    android:layout_toEndOf="@+id/int8"
                    android:textSize="20dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="0"
                    android:id="@+id/int0"
                    android:layout_alignTop="@+id/int9"
                    android:layout_toEndOf="@+id/int9"
                    android:textSize="20dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="確定"
                    android:id="@+id/btn_enter"
                    android:layout_alignTop="@+id/int0"
                    android:layout_toEndOf="@+id/int0"
                    android:textSize="18dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="5"
                    android:id="@+id/int5"
                    android:layout_alignTop="@+id/int4"
                    android:layout_toEndOf="@+id/int4"
                    android:textSize="20dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="刪除"
                    android:id="@+id/btn_del"
                    android:layout_alignTop="@+id/int5"
                    android:layout_toEndOf="@+id/int5"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="下個品牌:"
                    android:id="@+id/textView5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="300dp"
                    android:layout_alignStart="@+id/myseek" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brandSelecter"
                    android:layout_alignTop="@+id/int1"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_toStartOf="@+id/int1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Pre-swap mwssage goes here"
                    android:id="@+id/swap_msg"
                    android:layout_above="@+id/textClock"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:background="@color/background"
                android:layout_weight="1">

                <TabHost
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/tabHost"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TabWidget
                            android:id="@android:id/tabs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <FrameLayout
                            android:id="@android:id/tabcontent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/tab1layout"
                                android:orientation="vertical">
                                <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:stretchColumns="*"
                                    android:background="@color/accent_material_light"
                                    android:id="@+id/tab1table">
                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@color/background_material_light">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            android:text="重量"
                                            android:id="@+id/textView22"
                                            android:layout_column="0"
                                            android:gravity="center" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            android:text="圓周"
                                            android:id="@+id/textView7"
                                            android:layout_column="1"
                                            android:gravity="center" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            android:text="透氣率"
                                            android:id="@+id/textView8"
                                            android:layout_column="2"
                                            android:gravity="center" />
                                    </TableRow>
                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@color/background_material_light"
                                        android:layout_marginTop="1dp">
                                    </TableRow>
                                </TableLayout>
                                <ListView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:id="@+id/valueListView"
                                    android:layout_weight="1" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/tab2layout"
                                android:orientation="vertical">
                                <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:stretchColumns="*"
                                    android:background="@color/accent_material_light"
                                    android:id="@+id/table2">
                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@color/background_material_light">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            android:text="生產線"
                                            android:id="@+id/textView9"
                                            android:layout_marginStart="20dp"
                                            android:layout_column="0" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            android:text="現在箱數"
                                            android:id="@+id/textView10"
                                            android:layout_marginStart="75dp"
                                            android:layout_column="1" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            android:text="目標箱數"
                                            android:id="@+id/textView11"
                                            android:layout_column="2"
                                            android:paddingEnd="50dp"
                                            android:layout_gravity="end" />
                                    </TableRow>
                                </TableLayout>
                                <ListView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:id="@+id/boxListView"
                                    android:layout_weight="1" />
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </TabHost>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:background="@color/gray">
            <com.example.tenny.usbcommunication.ScrollForeverTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:text="[No system message]"
                android:textColor="@color/black"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:focusable="true"
                android:id="@+id/msg"
                android:layout_span="3" />
        </TableRow>
    </TableLayout>





    <ListView
        android:layout_width="@dimen/list_width"
        android:layout_height="@dimen/list_height"
        android:visibility="gone"
        android:id="@+id/lv_message_box"
        android:layout_centerVertical="true" />
</RelativeLayout>
